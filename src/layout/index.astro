---
import { ViewTransitions } from 'astro:transitions';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <link
      href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&display=swap"
      rel="stylesheet"
    />
    <ViewTransitions />
  </head>
  <body class="bg-[#0f131] dark:bg-[#0f131b] h-full w-screen">
    <div
      class="w-32 absolute top-0 left-5 h-full flex flex-col items-center p-2 text-vatscaSnow"
    >
      <a href="/" class="bg-[#28465e] p-2 rounded mt-8">
        <img src="/Arrow transparent.svg" class="W-12 h-12" />
      </a>
      <div
        class="flex h-1/3 justify-between gap-6 flex-col mt-12 font-semibold text-lg uppercase"
      >
        <a
          href="/briefing"
          class=" p-2 rounded justify-center items-center flex flex-col text-center hover:bg-vatscasecondary "
        >
          <img src="/icons/Documents.svg" class="w-18 h-18 p-2" />
          <p class="text-opacity-100">Briefing</p>
        </a>
        <a
          href="/scenery"
          class="p-2 rounded justify-center items-center flex flex-col text-center hover:bg-vatscasecondary "
        >
          <img src="/icons/Runway.svg" class="w-18 h-18 p-2" />
          <span>SCENERY</span>
        </a>
        <a
          href="/metar"
          class="p-2 rounded justify-center items-center flex flex-col text-center hover:bg-vatscasecondary "
        >
          <img src="/icons/Wether.svg" class="w-18 h-18 p-2" />
          <span>METAR</span>
        </a>
        <a
          href="/stands"
          class="p-2 rounded justify-center items-center flex flex-col text-center hover:bg-vatscasecondary "
        >
          <img src="/icons/Aircraft.svg" class="w-18 h-18 p-2" />
          <span>STANDS</span>
        </a>
        <a
          href="/competition"
          class="p-2 rounded justify-center items-center flex flex-col text-center hover:bg-vatscasecondary "
        >
          <img src="/icons/Pokal.svg" class="w-18 h-18 p-2" />
          <span>COMPETITION</span>
        </a>
      </div>
      <a
      href="/atc"
      class="p-2 rounded justify-center items-center flex flex-col text-center hover:bg-vatscasecondary absolute bottom-10 "
    >
      <img src="/icons/Atc.svg" class="w-16 h-16 p-2" />
      <span>ATC</span>
    </a>
    </div>
    <div class="w-[calc(100%-10.5rem)] h-full absolute top-0 left-[10.5rem] -mr-32">
      <slot />
    </div>
  </body>
</html>
