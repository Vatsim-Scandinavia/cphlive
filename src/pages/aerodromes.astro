---
import Layout from "../layout/index.astro";
import AirportModal from "../components/AirportModal";
import LoopIcon from "../components/LoopIcon";
import { Input } from "@nextui-org/react";
const airports = [
  {
    name: "Kastrup",
    icao: "EKCH",
    iata: "CPH",
    standguide:
      "https://vatsim-scandinavia.org/applications/core/interface/file/attachment.php?id=3318",
    pushback:
      "https://vatsim-scandinavia.org/applications/core/interface/file/attachment.php?id=4391&key=5033a7fc554455bce1ceabead8c1bd96",
    taxi: "https://vatsim-scandinavia.org/applications/core/interface/file/attachment.php?id=3320",
    charts:
      "https://vatsim-scandinavia.org/applications/core/interface/file/attachment.php?id=4454&key=3384d7148670adf2b4acf5986ff5e00d",
  },
  { name: "Roskilde", icao: "EKRK", iata: "RKE", standguide: "", pushback: "", taxi: "", charts: ""},
    { name: "Rønne", icao: "EKRN", iata: "RNN", standguide: "", pushback: "", taxi: "", charts: ""},
    { name: "Billund", icao: "EKBI", iata: "BLL", standguide: "", pushback: "", taxi: "", charts: ""},
    { name: "Aalborg", icao: "EKYT",iata: "AAL", standguide: "", pushback: "", taxi: "", charts: ""},
    { name: "Aarhus", icao: "EKAH",iata: "AAR", standguide: "", pushback: "", taxi: "", charts: ""},
    { name: "Sønderborg", icao: "EKSB",iata: "SGD", standguide: "", pushback: "", taxi: "", charts: ""},
];
---

<Layout>
  <div class="w-full h-full flex justify-start pt-12 flex-col items-center p-8">
    <h1 class="text-6xl font-semibold">Aerodromes</h1>
    <span class="m-10"/>


    <div class="flex items-center justify-center dark:text-white w-full">
      <div class="flex w-full justify-center items-center flex-col">
        <div class="w-full grid gap-4 grid-cols-1 lg:grid-cols-2 lg:w-2/3">
          {
            airports.map((item) => (
              <AirportModal airport={item} client:visible />
            ))
          }
        </div>

      </div>
    </div>
  </div>
</Layout>