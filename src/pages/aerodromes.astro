---
import Layout from "../layout/index.astro";
import AirportModal from "../components/AirportModal";
const airports = [
  {
    name: "Kastrup",
    icao: "EKCH",
    iata: "CPH",
    qri: [
      "Initial climb FL070 (04/22) or 4000' (12/30)",
      "After takeoff contact CPH departure, passing 1000'",
      "Do NOT delete the discontinuity before the final"
    ],
    documents: [
      {name: "Stand Guide", link: "https://vatsim-scandinavia.org/applications/core/interface/file/attachment.php?id=3305"},
      {name: "Standard Pushback Points", link: "https://vatsim-scandinavia.org/applications/core/interface/file/attachment.php?id=4306&key=8b5f5afccf5c302e3697e9a6f20feeeb"},
      {name: "Standard Taxi Routes", link: "https://vatsim-scandinavia.org/applications/core/interface/file/attachment.php?id=3320"},
      {name: "Charts", link: "https://vatsim-scandinavia.org/applications/core/interface/file/attachment.php?id=4454&key=3384d7148670adf2b4acf5986ff5e00d"},
    ]
  },
  { name: "Roskilde", icao: "EKRK", iata: "RKE", standguide: "", pushback: "", taxi: "", charts: ""},
    { name: "Rønne", icao: "EKRN", iata: "RNN", standguide: "", pushback: "", taxi: "", charts: ""},
    { name: "Billund", icao: "EKBI", iata: "BLL", standguide: "", pushback: "", taxi: "", charts: ""},
    { name: "Aalborg", icao: "EKYT",iata: "AAL", standguide: "", pushback: "", taxi: "", charts: ""},
    { name: "Aarhus", icao: "EKAH",iata: "AAR", standguide: "", pushback: "", taxi: "", charts: ""},
    { name: "Sønderborg", icao: "EKSB",iata: "SGD", qri: [
      "AFIS Airport - Airspace class G from GND-3500"
    ],
    documents: [
      {
        "name": "Charts",
        "link": "https://vatsim-scandinavia.org/applications/core/interface/file/attachment.php?id=2628"
      }
    ]
  },
];
---

<Layout>
  <div class="w-full h-full flex justify-start pt-12 flex-col items-center p-8">
    <h1 class="text-6xl font-semibold">Aerodromes</h1>
    <span class="m-10"/>


    <div class="flex items-center justify-center dark:text-snow w-full">
      <div class="flex w-full justify-center items-center flex-col">
        <div class="w-full grid gap-4 grid-cols-1 lg:grid-cols-2 lg:w-2/3">
          {
            airports.map((item) => (
              <AirportModal airport={item} client:visible />
            ))
          }
        </div>

      </div>
    </div>
  </div>
</Layout>