---
import { ViewTransitions } from "astro:transitions";
import "../globals.css";
import Accordion from "../components/Accordion.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/Arrow transparent.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <title>Copenhagen Live</title>
    <ViewTransitions />
  </head>
  <body
    class="bg-[#f3f1ed] bg-[url('/skies.svg')] bg-cover flex justify-center items-center h-full min-h-screen text-[#1a4860]"
  >
    <div
      class="py-4 px-2 mx-auto max-w-screen-2xl sm:py-4 lg:px-6 w-full h-fit"
    >
      <div class="grid grid-cols-4 grid-rows-1 xl:grid-rows-3 gap-4 h-fit">
        <div
          class="col-span-4 h-fit py-12 flex flex-col justify-center items-center bg-[#e6e8ee] w-full"
        >
          <img src="/logo.svg" alt="" class="w-32 aspect-auto" />
        </div>
        <div
          class="col-span-4 xl:col-span-1 xl:row-span-2 xl:row-start-2 h-full flex flex-col items-center bg-[#e6e8ee] "
        >
          <h3
            class="text-center text-2xl font-medium p-4 xs:text-xl md:text-3xl w-full"
          >
            👋🏻 Sponsors
          </h3>
          <img src="/simnord1.png" alt="" class="h-auto w-64 my-6 rounded-md" />
        </div>
        <div
          class="flex flex-col overflow-hidden rounded-lg px-4 w-full col-span-4 xl:col-span-2 xl:col-start-2 md:row-start-2 bg-[#e6e8ee] h-full py-4"
        >
          <div
            class="flex flex-wrap justify-around items-center h-full w-full gap-2"
          >
            <a
              href="/Copenhagen Airport Pilot Briefing 2024.pdf"
              class="aspect-video flex flex-col items-center justify-center p-4 rounded"
            >
              <span class="text-4xl">🧑🏻‍✈️</span>
              <span class="text-xl font-medium">Pilot Briefing</span>
            </a>
            <a
              href="https://booking.vatsim-scandinavia.org/"
              target="_blank"
              class="aspect-video flex flex-col items-center justify-center p-4 rounded"
            >
              <span class="text-4xl">✈️</span>
              <span class="text-xl font-medium">Book a slot</span>
            </a>
            <div
              class="aspect-video flex flex-col items-center justify-center p-4 rounded"
            >
              <span class="text-4xl">📄</span>
              <span class="text-xl font-medium">Learn more</span>
            </div>
          </div>
        </div>
        <a
          href="/va"
          class="flex flex-col justify-center items-center overflow-hidden rounded-lg px-4 col-span-4 xl:col-span-1 xl:col-start-2 xl:row-start-3 bg-[#e6e8ee] h-full py-4"
        >
          <h3 class="text-4xl font-medium p-4 w-fit">
            Virtual <br /> Airline <br /> Fly-in
          </h3>
        </a>
        <a
          href="https://twitch.tv/vatsimscandinavia"
          target="_blank"
          class="flex flex-col justify-center items-center overflow-hidden rounded-lg px-4 col-span-4 xl:col-span-1 xl:col-start-3 xl:row-start-3 bg-[#e6e8ee] h-full py-4"
        >
          <img class="w-32" src="/Twitch_logo.svg" alt="" />
        </a>
        <div
          class="flex flex-col col-span-4 xl:col-span-1 xl:row-span-2 xl:col-start-4 xl:row-start-2 bg-[#e6e8ee] h-full py-4"
        >
          <a
            href=""
            class="flex flex-col overflow-hidden rounded-lg px-4 pb-4 flex-grow"
          >
            <h3 class="text-2xl font-medium w-full text-center">📅 Schedule</h3>
            <div class="my-auto">
              <div class="flex flex-col gap-2 p-4">
                <div class="flex justify-between items-center font-medium">
                  <span class="text-xl">04:00</span>
                  <span class="text-xl">Opening</span>
                </div>
                <div class="flex justify-between items-center">
                  <Accordion time="15:00" title="Join the simulator" details="We will be following a flight into Copenhagen from a full B373 simulator!" />
                </div>
                <div class="flex justify-between items-center">
                  <Accordion time="12:00" title="vSAS group flight" details="Join vSAS in their group flight around Denmark!" />
                </div>
                <div class="flex justify-between items-center">
                  <span class="text-xl">15:00</span>
                  <span class="text-xl">ATC Q&A</span>
                </div>
                <div class="flex justify-between items-center font-medium">
                  <span class="text-xl">22:00</span>
                  <span class="text-xl">Closing</span>
                </div>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </body>
</html>
